<h2 class="page-header">Register</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">
            <i class="icon-remove-sign icon-large"></i> {{msg}}
            <a href="#close" class="icon-remove"></a>
        </div>
    {{/each}}
{{/if}}
<form method="post" action="/users/register_talent">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Name" name="name">
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" placeholder="Username" name="username">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" placeholder="Email" name="email">
    </div>
    <div class="form-group">
        <label>Website (Optional)</label>
        <input type="text" class="form-control" placeholder="Optional" name="website1">
    </div>
    <div class="form-group">
        <label>Website (Optional)</label>
        <input type="text" class="form-control" placeholder="Optional" name="website2">
    </div>
    <!-- postal-code input-->
    <div class="form-group">
        <label class="control-label">Zip / Postal Code</label>
        <div class="controls">
            <input id="postal-code" name="postalcode" type="text" placeholder="zip or postal code" class="form-control">
            <p class="help-block"></p>
        </div>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password">
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password2">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>